md-content(layout="column" layout-align="start start")
    .lsm-list(flex)
        h2(ng-if="posts") {{ 'site.latest_posts' | translate }}
        h2(ng-if="posts.length === 0") {{ 'site.no_latest_posts' | translate }}
        .lsm-list-item(layout='column' layout-align="start center" ng-repeat='post in posts')
            .lsm-list-item-text(flex)
                h3(ng-href='/{{ region.slug || region.uuid }}/{{ location.slug }}') {{ post.title }}
                p.metatext(ng-href='/{{ region.slug || region.uuid }}/{{ location.slug }}') {{'author.on' | translate}} {{ post.created | date : 'dd.MM.yy' }}
                p.smalltext(ng-href='/{{ region.slug || region.uuid }}/{{ location.slug }}') {{post.abstract | limitTo: 140}}...
