include mixins/_form
include mixins/_buttons
include mixins/_layout
include mixins/_style

+layout('column','center center',true)
    md-card()
        md-toolbar(md-scroll-shrink)
            +layout('row','center center','padding')
                +headline("Profile")
        md-card-content
            +layout('row','center center')
                +content('column', 'start center')
                    +input('text', 'user.login', 'users.username', null, null)
                    +input('password', 'user.password', 'users.password', null, null)
                    +input('password','user.password_confirm', 'users.password_confirm', null, null)
                    +input('email', 'user.email', 'users.email', null, null)
                    +button('site.lang', 'language()','','fa-language',null)
        .md-actions(layout="row" layout-align="end center")
            span(flex="10")
            span(flex="50")
                +button('cancel','cancel()','md-raised','')
            span(flex="40")
                +button_fab('submit','submit()','md-warn','fa-check')