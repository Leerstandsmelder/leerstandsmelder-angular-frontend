include ../../../shared/jade/mixins/_form
include ../../../shared/jade/mixins/_buttons
include ../../../shared/jade/mixins/_layout
include ../../../shared/jade/mixins/_style

+layout('column','start center',true)
	div
	div
	md-card()
		md-toolbar(md-scroll-shrink)
			+layout('row','center center','padding')
				+headline("users.forgot")
		md-card-content
			+layout('row','center center')
				+content('column','start center')
					+input('email','user.email','users.email', null, null)
		.md-actions(layout="row" layout-align="start end")
			+button('actions.cancel','cancel("login")','md-raised','',null,'/')
			span(flex)
			+button_fab('actions.submit','submit()','md-primary','fa-send')