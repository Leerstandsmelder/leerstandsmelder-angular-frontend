include ../mixins/_form
include ../mixins/_buttons
include ../mixins/_layout
include ../mixins/_style

+layout('column','center center',true)
	md-card()
		md-toolbar(md-scroll-shrink)
			+layout('row','center center','padding')
				+headline("users.signup")
		md-card-content
			+layout('row','center center')
				+content('column','start center')
					+input('email','user.email', 'users.email')
					+input('password','user.password', 'users.password')
				+content('column','start center')
					+input('text','user.login', 'users.username')
					+input('password','user.password_confirm', 'users.password_confirm')

		.md-actions(layout="row" layout-align="end center")
			+button('cancel','cancel()','md-raised','',null,'/')
			span(flex)
			+button_fab('actions.submit','submit()','md-accent','fa-sign-in')